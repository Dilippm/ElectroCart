<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-12">
        
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0" style="color: #0760e6; padding-top: 20px; "> <b>Orders</b> </p>
               
              </div>
              <table class="table" id="ordertable">
                <thead>
                  <tr>
                    <th>No.</th>
                    <th>Order Id</th>
                    <th>Product Name</th>
                
                    <th>Address</th>
                    <th>Payment</th>
                    <th>Price</th>
                    <th>Date</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(orderDetail.length > 0) { %>
                    <% for(let i=0; i<orderDetail.length; i++) { %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= orderDetail[i]._id %></td>
                        <td>
                          <% orderDetail[i].product.forEach((product) => { %>
                            <div><%= product.productId.productName %></div>
                          <% }); %>
                        </td>
                      
                        <td><%= orderDetail[i].deliveryAddress %></td>
                        <td><%= orderDetail[i].paymentType %></td>
                        <td><%= orderDetail[i].total %></td>
                        <td><%= orderDetail[i].date %></td>
                        <td><%= orderDetail[i].status %></td>
                      </tr>
                    <% } %>
                  <% } %>
                </tbody>
              </table>
              
              
            
           
              
          </div>
        </div>
      </div>
    </div>
  </section>

  

